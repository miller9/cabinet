- @docs.each do |doc|
   // creates a link to the whole content of the document
   %h2= link_to doc.title, doc
   // shows the time when it was created
   %p= time_ago_in_words(doc.created_at)
   // just show the firts 50 content characters
   %p= truncate(doc.content, length:50)
